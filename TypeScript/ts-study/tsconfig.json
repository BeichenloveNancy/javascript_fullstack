{
  "compilerOptions": {
    "target": "es5",                   
    "module": "commonjs",              
    "moduleResolution": "node", //选择模块解析器
    "experimentalDecorators": true, //开启ts装饰器
    "allowSyntheticDefaultImports": true,
    "sourceMap":true,
    "strict": true,
    "noImplicitAny": true,  // 不允许默认的any类型
    "alwaysStrict": true,  // 'use strict'
    "declaration": true,   // 生成对应的 .d.ts文件(声明)
    "removeComments": true, //  删除编译后的所有注释
    "noImplicitReturns": true, // 不是函数的所有返回路径都有返回值时报错
    "importHelpers": true,
    "lib": ["es6", "dom"], //指定要包含在编译中的库文件
    "typeRoots": ["node_modules/@types"],
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
   "./src/**/*.ts" 
  ],
  "exclude": [
   "node_modules",
   "dist" 
  ]
}
